<div id="page-content">

  <h1 class="text-center mt-4">Listing all Articles</h1>
  <div class="container">
    <% @articles.each do |articleInstance| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by Nawfal Imran
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to articleInstance.title, article_path(articleInstance), class:"text-success" %></h5>
            <p class="card-text"> <%= articleInstance.description %> </p>
            <%= link_to 'Show', article_path(articleInstance), class:"btn btn-primary"%>
          </div>
          <div class="card-footer text-muted">
            2 days ago
          </div>
        </div>
      </div>
    </div>
    <% end %>     
  </div>

</div>
