<div class="container">

  <div class="flickr_pagination mg-4">
    <%= will_paginate @articles, :container => false %>
  </div>

    <% @categories.each do |categoryInstance| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to categoryInstance.name, category_path(categoryInstance), class:"text-success" %></h5>
            <p class="card-text"> <%= pluralize(categoryInstance.articles.count, "article") %> </p>
          </div>
          <div class="card-footer text-muted">
          <small>
            Created <%= time_ago_in_words(categoryInstance.created_at) %> ago,
            edited <%= time_ago_in_words(categoryInstance.updated_at) %> ago
          </small>
          </div>
        </div>
      </div>
    </div>
    <% end %>     
  </div>

  <div class="flickr_pagination mb-4">
    <%= will_paginate @articles, :container => false %>
  </div>